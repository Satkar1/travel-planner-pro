{
  "version": 2,
  "builds": [
    {
      "src": "src/app/api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "next.config.js",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "src/app/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_GEMINI_API_KEY": "@gemini_api_key",
    "NEXT_PUBLIC_OPENWEATHER_API_KEY": "@openweather_api_key"
  }
}